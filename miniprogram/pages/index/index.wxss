/* 首页样式 */

.home-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.greeting {
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.avatar-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 菜品区域 */
.dishes-section {
  padding: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-dish-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 菜品网格 */
.dishes-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30rpx;
}

.dish-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.dish-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.dish-image {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dish-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.dish-info {
  padding: 30rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.dish-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  line-height: 1.4;
}

.dish-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.dish-time,
.dish-difficulty {
  font-size: 22rpx;
  color: #999;
}

.dish-actions {
  text-align: center;
}

.add-btn {
  background: #667eea;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 购物车浮层 */
.cart-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.cart-panel {
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx;
  width: 100%;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.cart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.cart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.cart-items {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-quantity {
  font-size: 24rpx;
  color: #666;
}

.cart-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.total-price {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.confirm-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 浮动购物车按钮 */
.floating-cart {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #667eea;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.cart-badge {
  background: #ff6b6b;
  color: white;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
}

.cart-text {
  font-size: 28rpx;
  font-weight: 500;
}
