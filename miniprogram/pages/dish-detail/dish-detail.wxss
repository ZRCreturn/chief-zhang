/* 菜品详情页面样式 */
.dish-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  gap: 20rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #999;
}

.test-btn {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.test-info {
  font-size: 24rpx;
  color: #666;
}

/* 基本信息区域 */
.basic-info-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.dish-header {
  display: flex;
  gap: 25rpx;
}

.dish-image-placeholder {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.dish-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.dish-meta {
  flex: 1;
}

.dish-name-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.dish-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  flex: 1;
}

.dish-status {
  margin-left: 15rpx;
}

.status-badge {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  color: white;
}

.status-badge.available {
  background-color: #52c41a;
}

.status-badge.learning {
  background-color: #faad14;
}

.status-badge.paused {
  background-color: #ff4d4f;
}

.dish-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 25rpx;
  display: block;
}

.dish-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

.stat-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 编辑区域 */
.edit-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.half-width {
  flex: 1;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.form-textarea {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 15rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.form-picker {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.edit-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.cancel-edit-btn {
  flex: 1;
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.save-edit-btn {
  flex: 1;
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 区域样式 */
.section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

/* 食材列表 */
.ingredients-list {
  margin-bottom: 15rpx;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ingredient-info {
  flex: 1;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 15rpx;
}

.ingredient-amount {
  font-size: 26rpx;
  color: #666;
}

.ingredient-category {
  font-size: 24rpx;
  color: #999;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 步骤列表 */
.steps-list {
  margin-bottom: 15rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  background-color: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: block;
  margin-bottom: 10rpx;
}

.step-tip {
  font-size: 24rpx;
  color: #667eea;
  background-color: #f0f4ff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  display: block;
}

/* 操作按钮 */
.action-buttons {
  padding: 30rpx;
}

.add-to-cart-btn {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 32rpx;
  width: 100%;
  margin-bottom: 20rpx;
}

.manage-buttons {
  display: flex;
  gap: 20rpx;
}

.edit-btn {
  flex: 1;
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.delete-btn {
  flex: 1;
  background-color: #ff4757;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}