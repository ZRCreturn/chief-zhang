/* 登录页面样式 */

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 应用标题 */
.app-header {
  text-align: center;
  margin-top: 120rpx;
}

.app-title {
  font-size: 64rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.app-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 登录区域 */
.login-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

/* 微信登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: #07C160;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}


.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: 500;
}

/* 错误提示 */
.error-tip {
  color: #ff6b6b;
  font-size: 26rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx 40rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

/* 游客模式 */
.guest-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.guest-text {
  font-size: 26rpx;
  opacity: 0.7;
}

.guest-btn {
  color: white;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.guest-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

/* 底部说明 */
.footer {
  text-align: center;
  margin-top: 80rpx;
}

.footer-text {
  font-size: 24rpx;
  opacity: 0.6;
  line-height: 1.5;
}